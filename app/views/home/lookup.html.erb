<h3>Crypto Currency Lookup</h3>
<br />


<%= form_tag home_lookup_path, :method => 'POST' do %>
 <div class="input-group">
    <%= text_field_tag 'sym', nil, placeholder: 'Enter Cypto Symbol', size: 50, class: "form-control" %>
    <span class="input-group-btn">
        <%= submit_tag 'Lookup Stock Quote', class: "btn btn-primary " %>
    </span>
 </div>
<% end %>

<br/><br/>

<%= @symbol %>

<% if @symbol %>
    <% for x in @lookup_coin %>
        <% if @symbol == x["symbol"] %>
            <%= x["name"] %>: $<%= x["price_usd"] %><br />
            Rank: <%= x["rank"] %><br/><br/>
        <% end %>
    <% end %>
<% end %>